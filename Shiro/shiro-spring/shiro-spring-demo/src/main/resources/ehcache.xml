<ehcache>

	<diskStore path="C:/ehcache" />
	<!--  
		maxEntriesLocalHeap 
		maxBytesLocalHeap
	-->
	<cache name="authorizationCache"  maxBytesLocalHeap="10M"
		eternal="false" timeToIdleSeconds="3600" timeToLiveSeconds="0"
		overflowToDisk="false" statistics="true">
	</cache>

	<cache name="authenticationCache"   maxBytesLocalHeap="10M"
		eternal="false" timeToIdleSeconds="3600" timeToLiveSeconds="0"
		overflowToDisk="false" statistics="true">
	</cache>

	<cache name="shiro-activeSessionCache"   maxBytesLocalHeap="10M"
		eternal="false" timeToIdleSeconds="3600" timeToLiveSeconds="0"
		overflowToDisk="false" statistics="true">
	</cache>

</ehcache>
